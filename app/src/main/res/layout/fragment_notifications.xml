<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <ImageView
        android:id="@+id/back_btn_notifikasi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_notifikasi"/>

    <TextView
        android:id="@+id/tv_notifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesanan"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/back_btn_notifikasi"
        app:layout_constraintTop_toTopOf="@id/back_btn_notifikasi"
        app:layout_constraintBottom_toBottomOf="@id/back_btn_notifikasi"/>

    <TextView
        android:id="@+id/tv_title_notifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamu tidak punya notifikasi"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_btn_notifikasi"
        app:layout_constraintBottom_toTopOf="@id/img_notifikasi"/>

    <ImageView
        android:id="@+id/img_notifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notifikasi1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_notifikasi"
        app:layout_constraintBottom_toTopOf="@id/tv_desc_notifikasi"/>

    <TextView
        android:id="@+id/tv_desc_notifikasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yuk, jaga kebersihan dan bantu selamatkan bumi kita"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/img_notifikasi"
        app:layout_constraintEnd_toEndOf="@id/img_notifikasi"
        app:layout_constraintTop_toBottomOf="@id/img_notifikasi"/>
</androidx.constraintlayout.widget.ConstraintLayout>