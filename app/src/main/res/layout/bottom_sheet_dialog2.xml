<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Dana TextView -->
        <TextView
            android:id="@+id/pay_dana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dana"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/long_line"/>

        <!-- Line below Dana -->
        <View
            android:id="@+id/long_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/pay_dana"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- BRI TextView -->
        <TextView
            android:id="@+id/pay_bri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRI"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/long_line"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Line below BRI -->
        <View
            android:id="@+id/long_line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/pay_bri"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- BNI TextView -->
        <TextView
            android:id="@+id/pay_bni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BNI"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/long_line2"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Line below BNI -->
        <View
            android:id="@+id/long_line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/pay_bni"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- GoPay TextView -->
        <TextView
            android:id="@+id/paygpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GoPay"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/long_line3"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Line below GoPay -->
        <View
            android:id="@+id/long_line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/paygpay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Shoppe Pay TextView -->
        <TextView
            android:id="@+id/pay_shoppepay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoppe Pay"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/long_line4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>