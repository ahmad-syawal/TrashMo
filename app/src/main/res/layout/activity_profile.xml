<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/back_arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_profile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/back_arrow1"
        app:layout_constraintTop_toTopOf="@id/back_arrow1"
        app:layout_constraintBottom_toBottomOf="@id/back_arrow1"/>

    <ImageView
        android:id="@+id/edit_profile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_create_24"
        android:layout_marginStart="230dp"
        app:layout_constraintTop_toTopOf="@id/tv_profile1"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile1"
        app:layout_constraintStart_toEndOf="@id/tv_profile1"/>

    <TextView
        android:id="@+id/tv_edit_profile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="@id/edit_profile1"
        app:layout_constraintBottom_toBottomOf="@id/edit_profile1"
        app:layout_constraintStart_toEndOf="@id/edit_profile1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintVertical_bias="0.4"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_pic"
        android:background="@drawable/circle_profile"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Syawal"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title_setting1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Pengaturan Akun"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toTopOf="@id/user_ico1"/>

    <ImageView
        android:id="@+id/user_ico1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_ico"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_setting1"
        app:layout_constraintBottom_toTopOf="@id/tv_set_profile2"
        app:layout_constraintStart_toStartOf="@+id/tv_title_setting1"/>

    <TextView
        android:id="@+id/tv_set_profile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Kamu"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/user_ico1"
        app:layout_constraintStart_toEndOf="@id/user_ico1"/>

    <TextView
        android:id="@+id/tv_set_profile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit dan tampilkan info profile"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_set_profile1"
        app:layout_constraintStart_toStartOf="@id/tv_set_profile1" />

    <ImageView
        android:id="@+id/img_set_profile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_set_profile2"
        app:layout_constraintBottom_toBottomOf="@id/tv_set_profile2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tv_title_setting2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan Aplikasi"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_set_profile2"
        app:layout_constraintStart_toStartOf="@id/tv_title_setting1"/>


    <ImageView
        android:id="@+id/notif_ico1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notif_ico"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_setting2"
        app:layout_constraintBottom_toTopOf="@id/help_ico1"
        app:layout_constraintStart_toStartOf="@+id/tv_title_setting2"/>

    <TextView
        android:id="@+id/tv_set_notif1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifikasi"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/notif_ico1"
        app:layout_constraintStart_toEndOf="@id/notif_ico1"/>

    <TextView
        android:id="@+id/tv_set_notif2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atur notifikasi yang kamu tampilkan"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_set_notif1"
        app:layout_constraintStart_toStartOf="@id/tv_set_notif1" />

    <ImageView
        android:id="@+id/img_set_notif1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_set_notif2"
        app:layout_constraintBottom_toBottomOf="@id/tv_set_notif2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageView
        android:id="@+id/help_ico1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/help_ico"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/notif_ico1"
        app:layout_constraintStart_toStartOf="@+id/notif_ico1"/>

    <TextView
        android:id="@+id/tv_set_help1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pusat Bantuan"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/help_ico1"
        app:layout_constraintStart_toEndOf="@id/help_ico1"/>

    <TextView
        android:id="@+id/tv_set_help2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bertanya untuk kendala yang kamu alami"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_set_help1"
        app:layout_constraintStart_toStartOf="@id/tv_set_help1" />

    <ImageView
        android:id="@+id/img_set_help1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_set_help2"
        app:layout_constraintBottom_toBottomOf="@id/tv_set_help2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageView
        android:id="@+id/about_ico1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/about_ico"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/help_ico1"
        app:layout_constraintStart_toStartOf="@+id/help_ico1"/>

    <TextView
        android:id="@+id/tv_set_about1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versi 3.1.0"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/about_ico1"
        app:layout_constraintStart_toEndOf="@id/about_ico1"
        app:layout_constraintBottom_toBottomOf="@id/about_ico1" />

    <ImageView
        android:id="@+id/img_set_about1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_set_about1"
        app:layout_constraintBottom_toBottomOf="@id/tv_set_about1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>